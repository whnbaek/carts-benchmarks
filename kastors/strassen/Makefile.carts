# CARTS Makefile for KASTORS Strassen

# Individual strassen variants in their own folders
STRASSEN_VARIANTS = \
  strassen \
  strassen-seq \
  strassen-task \
  strassen-task-dep \
  main-strassen

all:
	@for dir in $(STRASSEN_VARIANTS); do \
		if [ -d "$$dir" ]; then \
			echo "Building $$dir..."; \
			$(MAKE) -C $$dir all; \
		fi; \
	done

clean:
	@for dir in $(STRASSEN_VARIANTS); do \
		if [ -d "$$dir" ]; then \
			$(MAKE) -C $$dir clean; \
		fi; \
	done

.PHONY: all clean
