# CARTS Makefile for KASTORS SparseLU

# Individual sparselu variants in their own folders
SPARSELU_VARIANTS = \
  sparselu \
  sparselu-seq \
  sparselu-task \
  sparselu-task-dep \
  main-sparselu

all:
	@for dir in $(SPARSELU_VARIANTS); do \
		if [ -d "$$dir" ]; then \
			echo "Building $$dir..."; \
			$(MAKE) -C $$dir all; \
		fi; \
	done

clean:
	@for dir in $(SPARSELU_VARIANTS); do \
		if [ -d "$$dir" ]; then \
			$(MAKE) -C $$dir clean; \
		fi; \
	done

.PHONY: all clean
